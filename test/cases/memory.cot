test "local var" {
    var x: i64 = 42
    @assertEq(x, 42)
}

test "multiple locals" {
    var a: i64 = 10
    var b: i64 = 20
    @assertEq(a + b, 30)
}

test "reassign" {
    var x: i64 = 10
    x = 50 * 2
    @assertEq(x, 100)
}

test "swap" {
    var a: i64 = 5
    var b: i64 = 10
    var temp: i64 = a
    a = b
    b = temp
    @assertEq(b, 5)
}

test "accumulator" {
    var sum: i64 = 0
    var i: i64 = 1
    while (i <= 10) {
        sum += i
        i += 1
    }
    @assertEq(sum, 55)
}
