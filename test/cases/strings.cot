test "len simple" {
    @assertEq(len("hello"), 5)
}

test "len empty" {
    @assertEq(len(""), 0)
}

test "len long" {
    @assertEq(len("abcdefghijklmnopqrstuvwxyz"), 26)
}

test "index first" {
    var s = "hello"
    @assertEq(s[0], 104)
}

test "index last" {
    var s = "hello"
    @assertEq(s[4], 111)
}

test "concat simple" {
    var s1 = "hello"
    var s2 = " world"
    var s3 = s1 + s2
    @assertEq(len(s3), 11)
}

test "concat two vars" {
    var s1 = "hello"
    var s2 = " world"
    @assertEq(len(s1) + len(s2), 11)
}

test "concat var direct" {
    var s = "hello!"
    @assertEq(len(s), 6)
}

test "concat direct len" {
    @assertEq(len("hello" + " world"), 11)
}

test "string eq literals" {
    @assertEq("hello", "hello")
}

test "string eq vars" {
    var a = "world"
    var b = "world"
    @assertEq(a, b)
}

test "string eq concat" {
    var s = "hello" + " world"
    @assertEq(s, "hello world")
}

test "string eq empty" {
    @assertEq("", "")
}
