const CswLevel = enum {
    Low = 10,
    Medium = 50,
    High = 100
}

test "switch simple" {
    var x: i64 = 2
    var result = switch x {
        1 => 10,
        2 => 20,
        3 => 30,
        else => 0,
    }
    @assertEq(result, 20)
}

test "switch enum" {
    var lvl = CswLevel.Medium
    var val = switch lvl {
        CswLevel.Low => 1,
        CswLevel.Medium => 50,
        CswLevel.High => 99,
        else => 0,
    }
    @assertEq(val, 50)
}

test "exhaustive enum switch without else" {
    var lvl = CswLevel.High
    var val = switch lvl {
        CswLevel.Low => 1,
        CswLevel.Medium => 2,
        CswLevel.High => 3,
    }
    @assertEq(val, 3)
}

test "exhaustive enum switch all paths" {
    var lvl = CswLevel.Low
    var r1 = switch lvl {
        CswLevel.Low => 10,
        CswLevel.Medium => 50,
        CswLevel.High => 100,
    }
    @assertEq(r1, 10)

    lvl = CswLevel.Medium
    var r2 = switch lvl {
        CswLevel.Low => 10,
        CswLevel.Medium => 50,
        CswLevel.High => 100,
    }
    @assertEq(r2, 50)
}

test "non-exhaustive enum switch with else" {
    var lvl = CswLevel.Low
    var val = switch lvl {
        CswLevel.High => 100,
        else => 0,
    }
    @assertEq(val, 0)
}
