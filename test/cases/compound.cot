test "add assign" {
    var x: i64 = 10
    x += 5
    @assertEq(x, 15)
}

test "sub assign" {
    var x: i64 = 10
    x -= 3
    @assertEq(x, 7)
}

test "mul assign" {
    var x: i64 = 5
    x *= 4
    @assertEq(x, 20)
}

test "div assign" {
    var x: i64 = 10
    x /= 2
    @assertEq(x, 5)
}

test "mod assign" {
    var x: i64 = 17
    x %= 7
    @assertEq(x, 3)
}

test "and assign" {
    var x: i64 = 255
    x &= 15
    @assertEq(x, 15)
}

test "or assign" {
    var x: i64 = 240
    x |= 15
    @assertEq(x, 255)
}

test "xor assign" {
    var x: i64 = 255
    x ^= 15
    @assertEq(x, 240)
}
