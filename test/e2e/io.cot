test "readByte basic" {
    writeFile("/tmp/cot_io_readbyte.txt", "AB")
    var fd = fd_open(@ptrOf("/tmp/cot_io_readbyte.txt"), @lenOf("/tmp/cot_io_readbyte.txt"), O_RDONLY)
    var reader = newBufferedReader(fd)
    var a = readByte(reader)
