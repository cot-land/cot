// os â€” Process utilities.
//
// Wraps low-level process control functions via extern fn declarations.
// Reference: Zig std.process (exit, argsAlloc, EnvMap)

import "std/sys"

// exit(code) is available directly from std/sys

fn argsCount() i64 {
    return args_count()
}

fn argLen(n: i64) i64 {
    return arg_len(n)
}

fn argPtr(n: i64) i64 {
    return arg_ptr(n)
}

fn environCount() i64 {
    return environ_count()
}

fn environLen(n: i64) i64 {
    return environ_len(n)
}

fn environPtr(n: i64) i64 {
    return environ_ptr(n)
}

// ===== High-level APIs =====

fn arg(n: i64) string {
    return @string(arg_ptr(n), arg_len(n))
}

fn environ(n: i64) string {
    return @string(environ_ptr(n), environ_len(n))
}
